<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Duration</th>
      <th>Released at</th>
      <th>Play count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr class="<%= decade_class_for song %>">
        <td><%= song.name %></td>
        <td><%= song.artist.name %></td>
        <td><%= format_duration song.duration %></td>
        <td><%= song.released_at %></td>
        <td><%= song.play_count ? song.play_count.count : 0 %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

